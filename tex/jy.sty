%New environments with two different theorem styles.

%Plain theorem style has bolded theorem name, and italicized text
\theoremstyle{plain}
\newtheorem{thm}{Theorem}[subsection]
\newtheorem{lemma}[thm]{Lemma}
\newtheorem{coro}[thm]{Corollary}
\newtheorem{prop}[thm]{Proposition}
\newtheorem{conj}{Conjecture}[subsection]
\newtheorem{ax}{Axiom}[subsection]

%Remark theorem style has italicized theorem name, and default text
\theoremstyle{remark}
\newtheorem{rem}[thm]{Remark}
\newtheorem{definition}{Definition}[section]
\newtheorem{eg}{Example}
\newtheorem{ex}{Exercise}

%Framing for definitions
\newenvironment{defn}
	{\begin{oframed}\begin{definition}}
	{\end{definition}\end{oframed}}

%New solutions environment
\newenvironment{soln}
  {\begin{proof}[Solution]}
  {\end{proof}}

%New claim environment
\newenvironment{claim}
  {\begin{proof}[Claim]}
  {\end{proof}}
\AtBeginEnvironment{claim}{\renewcommand{\qedsymbol}{}}{}{}

%Framing for big claims
\newenvironment{bclaim}
	{\begin{oframed}
	\begin{center}
	\textbf{Big Claim}
	\end{center} }{
	\end{oframed}}

%Better equation counting
\counterwithin{equation}{section}
\counterwithin{equation}{subsection}

